{
  "name": "quba_viewer",
  "version": "0.1.0",
  "description": "Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder build --win --publish never",
    "publish": "electron-builder build --win --publish always",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "org.quba-viewer.viewer",
    "extends": null,
    "files": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "node_modules",
          "assets",
          "main.js",
          "index.html",
          "about.html",
          "script.js",
          "xrechnung-viewer.js",
          "xrechnung-viewer.css",
          "xrechnung-html.xsl",
          "xrechnung-html.sef.json",
          "xr-mapping.xsl",
          "cii-xr.xsl",
          "cii-xr.sef.json",
          "package.json"
        ]
      },
      {
        "from": "**/*",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "./assets/img/logo_small_icon_only.png",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./assets/img/logo_small_icon_only.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ZUGFeRD",
        "repo": "quba-viewer"
      }
    ]
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/ZUGFeRD/quba-viewer.git"
  },
  "keywords": [],
  "author": "Cuba",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/node": "^7.12.17",
    "@babel/register": "^7.12.13",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "custom-electron-titlebar": "^3.2.6",
    "electron": "^11.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "node": "^15.8.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_project"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.6",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^7.0.2",
    "electron-updater": "^4.3.8",
    "saxon-js": "^2.1.0"
  }
}
